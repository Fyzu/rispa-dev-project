{
  "name": "@rispa/about",
  "version": "0.1.0",
  "main": "./src/index.js",
  "devDependencies": {
    "@rispa/eslint-config": "^3.0.0",
    "enzyme": "^3.1.0"
  },
  "dependencies": {
    "@rispa/babel": "*",
    "@rispa/core": "*",
    "@rispa/redux": "*",
    "react-cookie": "^2.0.7",
    "react-loadable": "^5.5.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-router-dom": "^4.3.1",
    "prop-types": "^15.5.6"
  },
  "scripts": {
    "lint": "rispa-eslint .",
    "lint:fix": "rispa-eslint . --fix",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "^.+\\.sss$": "<rootDir>/src/__mocks__/stylesMock.js"
    },
    "transformIgnorePatterns": [
      "node_modules"
    ],
    "collectCoverageFrom": [
      "src/redux/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
